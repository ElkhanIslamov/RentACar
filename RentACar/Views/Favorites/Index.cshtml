@model List<RentACar.DataContext.Entities.Car>

@{
    ViewData["Title"] = "Seçilmişlər";
}

<h2>Seçilmişlər</h2>

@if (!Model.Any())
{
    <p>Seçilmiş avtomobil yoxdur.</p>
}
else
{
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Name">
                    <div class="card-body">
                        <h5 class="card-title">@car.Name</h5>
                        <p class="card-text">@car.PricePerDay ₼ / gün</p>
                        <button class="btn btn-danger toggle-favorite" data-id="@car.Id">
                            <i class="fa fa-heart"></i> Seçimdən çıxar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        $(document).on("click", ".toggle-favorite", function () {
            var id = $(this).data("id");
            $.post("/Favorites/Toggle", { id: id }, function () {
                location.reload();
            });
        });
    </script>
}
