@model RentACar.Models.BookingViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Sənin frontend layoutuna bağlıdır
    ViewData["Title"] = "Rezervasiya";
}

<section class="container mt-5 mb-5">
    <h2>Yeni Rezervasiya</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Avtomobil tipi</label>
            <input asp-for="CarType" class="form-control" placeholder="Sedan, SUV və s." />
        </div>
        <div class="form-group">
            <label>Götürülmə yeri</label>
            <input asp-for="PickupLocation" class="form-control" />
        </div>
        <div class="form-group">
            <label>Təslim yeri</label>
            <input asp-for="DropoffLocation" class="form-control" />
        </div>
        <div class="form-group">
            <label>Götürülmə tarixi</label>
            <input asp-for="PickupDate" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Götürülmə saatı</label>
            <input asp-for="PickupTime" type="time" class="form-control" />
        </div>
        <div class="form-group">
            <label>Təslim tarixi</label>
            <input asp-for="ReturnDate" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Təslim saatı</label>
            <input asp-for="ReturnTime" type="time" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Rezervasiya et</button>
    </form>
</section>
