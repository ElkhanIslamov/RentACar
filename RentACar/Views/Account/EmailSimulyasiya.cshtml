@model string
@{
    ViewData["Title"] = "Reset Link Sent";
}

<section id="section-email-sent" class="jarallax">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="mb-4">📩 Email Sent</h2>
                <p class="lead">
                    If an account with this email exists, we have sent you a link to reset your password.
                </p>              
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark mt-4">Back to Home</a>
            </div>
        </div>
    </div>
</section>
