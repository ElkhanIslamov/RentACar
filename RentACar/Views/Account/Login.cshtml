
@model LoginViewModel

<div class="no-bottom no-top" id="content">
    <div id="top"></div>
    <section id="section-hero" aria-label="section" class="jarallax">
        <img src="~/images/background/2.jpg" class="jarallax-img" alt="">
        <div class="v-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 offset-lg-4">
                        <div class="padding40 rounded-3 shadow-soft" data-bgcolor="#ffffff">
                            <h4>Login</h4>
                            <div class="spacer-10"></div>
                            <form id="form_register" class="form-border" method="post" action="https://www.madebydesignesia.com/themes/rentaly/account-dashboard.html">
                                <div class="field-set">
                                    <input asp-for="UserName" type="text" name="name" id="name" class="form-control" placeholder="User Name or email" />
                                </div>
                                <div class="field-set">
                                    <input asp-for="Password" type="text" name="name" id="name" class="form-control" placeholder="Password" />
                                </div>
                                <div id="submit">
                                    <input type="submit" id="send_message" value="Sign In" class="btn-main btn-fullwidth rounded-3" />
                                </div>
                            </form>
                            <div class="title-line">Or&nbsp;sign&nbsp;up&nbsp</div>
                            <div class="row g-2">
                                 <div class="col-lg-6">
                                    <a asp-controller="account" asp-action="register" ><h4>Sign up</h4></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>