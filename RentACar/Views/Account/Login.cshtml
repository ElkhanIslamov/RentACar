@model LoginViewModel
<div class="no-bottom no-top" id="content">
    <div id="top"></div>
    <section id="section-hero" aria-label="section" class="jarallax">
        <img src="~/images/background/2.jpg" class="jarallax-img" alt="">
        <div class="v-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 offset-lg-4">
                        <div class="padding40 rounded-3 shadow-soft" data-bgcolor="#ffffff">
                            <h4>Login</h4>
                            @* ✅ Show email error from TempData if exists *@
                            @if (TempData["EmailError"] != null)
                            {
                                <div class="alert alert-warning" role="alert">
                                    @TempData["EmailError"]
                                </div>
                            }
                            <div class="spacer-10"></div>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <form id="form_register" class="form-border" method="post">
                                <div class="field-set">
                                    <input asp-for="UserName" class="form-control" placeholder="User Name or email" />
                                </div>
                                <div class="field-set">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                </div>
                                <label class="py-3 d-flex flex-wrap justify-content-between">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input custom-checkbox-bold" />
                                        <label asp-for="RememberMe" class="form-check-label text-dark fw-bold">
                                            Remember Me
                                        </label>
                                    </div>
                                    <div id="passwordHelpBlock" class="form-text ">
                                        <a asp-controller="account" asp-action="forgotpassword" class="text-primary  fw-bold">Forgot Password?</a>
                                    </div>
                                </label>
                                <div>
                                    <button type="submit" class="btn btn-dark btn-lg rounded-1">Sign in</button>
                                </div>
                            </form>
                            <div class="title-line">Or&nbsp;sign&nbsp;up&nbsp</div>
                            <div class="row g-2">
                                 <div class="col-lg-6">
                                    <a asp-controller="account" asp-action="register" ><h4>Sign up</h4></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>