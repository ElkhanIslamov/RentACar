@model RentACar.DataContext.Entities.Car

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <!-- Şəkillər -->
        <div class="col-md-8">
            <div class="mb-4">
                <img src="~/images/car/@Model.ImageUrl" class="img-fluid w-100 rounded shadow" alt="@Model.Name" />
            </div>

            @* Əgər əlavə şəkillər varsa *@
            @if (Model.Images != null && Model.Images.Any())
            {
                <div class="row g-2">
                    @foreach (var image in Model.Images)
                    {
                        <div class="col-3">
                            <img src="~/images/car/@image.ImageUrl" class="img-thumbnail" alt="Gallery image" />
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Booking formu -->
        <div class="col-md-4">
            <div class="card shadow p-4">
                <h4 class="mb-3">Sürətli Sifariş</h4>
                <form asp-controller="Booking" asp-action="Create" method="post">
                    <input type="hidden" name="CarId" value="@Model.Id" />

                    <div class="mb-3">
                        <label for="StartDate" class="form-label">Başlama Tarixi</label>
                        <input type="date" class="form-control" id="StartDate" name="StartDate" required />
                    </div>

                    <div class="mb-3">
                        <label for="EndDate" class="form-label">Bitmə Tarixi</label>
                        <input type="date" class="form-control" id="EndDate" name="EndDate" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">İndi bron et</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Description -->
    <div class="row mt-5">
        <div class="col-12">
            <h4>Maşın haqqında</h4>
            <p>@Model.Description</p>
        </div>
    </div>
</div>
