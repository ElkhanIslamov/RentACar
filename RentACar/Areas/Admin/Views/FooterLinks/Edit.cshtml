@model RentACar.DataContext.Entities.FooterLink

@{
    ViewData["Title"] = "Footer Link Redaktə Et";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Footer Link Redaktə Et</h2>

<form asp-action="Edit" method="post">
