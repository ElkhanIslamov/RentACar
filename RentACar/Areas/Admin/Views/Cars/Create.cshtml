@model RentACar.Areas.Admin.Models.CarViewModel
@{
    ViewData["Title"] = "Yeni Avtomobil";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Yeni Avtomobil Yarat</h4>
        <form asp-action="Create">
            <div class="form-group">
                <label>Ad</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şəkil URL</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <label>Oturacaq sayı</label>
                <input asp-for="Seats" class="form-control" />
            </div>
            <div class="form-group">
                <label>Qapı sayı</label>
                <input asp-for="Doors" class="form-control" />
            </div>
            <div class="form-group">
                <label>Bağaj</label>
                <input asp-for="Luggage" class="form-control" />
            </div>
            <div class="form-group">
                <label>Günlük qiymət</label>
                <input asp-for="PricePerDay" class="form-control" />
            </div>
            <div class="form-group">
                <label>Kateqoriya</label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                    <option disabled selected>Seçin...</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Yarat</button>
            <a asp-action="Index" class="btn btn-secondary">Geri</a>
        </form>
    </div>
</div>
