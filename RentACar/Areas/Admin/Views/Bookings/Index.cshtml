@model IEnumerable<RentACar.DataContext.Entities.Booking>
@{
    ViewData["Title"] = "Rezervasiyalar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Bütün Rezervasiyalar</h4>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Avtomobil</th>
                    <th>Başlanğıc</th>
                    <th>Bitmə</th>
                    <th>Qiymət</th>
                    <th>Status</th>
                    <th>Əməliyyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.Car?.Name</td>
                            <td>@item.PickupDate.ToShortDateString()</td>
                            <td>@item.ReturnDate.ToShortDateString()</td>
                            <td>@(item.Car?.PricePerDay * (item.ReturnDate - item.PickupDate).Days) ₼</td>
                            <td>
                                <span class="badge @(item.Status == "Pending" ? "badge-warning" : item.Status == "Approved" ? "badge-success" : "badge-danger")">
                                @item.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Status Dəyiş</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
