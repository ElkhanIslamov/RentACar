@model IEnumerable<RentACar.DataContext.Entities.HeaderInfo>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Header Infos</h2>
    <a asp-action="Create" class="btn btn-primary">+ Add New</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Working Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.WorkingTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No Header Info found.</td>
            </tr>
        }
    </tbody>
</table>
