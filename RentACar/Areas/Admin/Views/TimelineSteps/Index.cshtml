@model IEnumerable<RentACar.DataContext.Entities.TimelineStep>

<h2>Timeline Steps</h2>

<p>
    <a class="btn btn-success" asp-action="Create">+ Add Step</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order</th>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="80" height="60" style="object-fit:cover; border-radius:6px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@item.Title</td>
                <td>
                    @if (item.Description?.Length > 70)
                    {
                        @item.Description.Substring(0, 70)                       
                                    }
                    else
                    {
                        @item.Description
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
