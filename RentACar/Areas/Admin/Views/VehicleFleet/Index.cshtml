@model List<RentACar.Areas.Admin.Models.VehicleFleetViewModel>

@{
    ViewData["Title"] = "Vehicle Fleet Settings";
}

<h2>Vehicle Fleet Settings</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Əlavə Et</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlıq</th>
            <th>Təsvir</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                 </td>
            </tr>
        }
    </tbody>
</table>
