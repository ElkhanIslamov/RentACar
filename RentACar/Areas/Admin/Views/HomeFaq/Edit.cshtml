@model RentACar.DataContext.Entities.HomeFaq

@{
    ViewData["Title"] = "FAQ Düzəlt";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>FAQ Düzəlt</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label for="Question">Sual</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Answer">Cavab</label>
        <textarea asp-for="Answer" class="form-control"></textarea>
        <span asp-validation-for="Answer" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="FaqText">Əlavə Məlumat</label>
        <textarea asp-for="FaqText" class="form-control"></textarea>
        <span asp-validation-for="FaqText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Yadda saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
