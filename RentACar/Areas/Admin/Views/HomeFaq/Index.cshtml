@model List<RentACar.DataContext.Entities.HomeFaq>

@{
    ViewData["Title"] = "FAQ Siyahısı";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>FAQ Siyahısı</h2>
<a asp-action="Create" class="btn btn-success mb-3">Yeni FAQ Əlavə Et</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Başlıq</th>
            <th>Sual</th>
            <th>Cavab</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faq in Model)
        {
            <tr>
                <td>@faq.Id</td>
                <td>@faq.FaqText</td>
                <td>@faq.Question</td>
                <td>@faq.Answer</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@faq.Id" class="btn btn-warning btn-sm">Düzəlt</a>
                    <a asp-action="Delete" asp-route-id="@faq.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
