 @model RentACar.DataContext.Entities.Category
@{
    ViewData["Title"] = "Kateqoriyanı Sil";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Silinməni təsdiqləyin</h4>
        <p class="text-danger">Bu əməliyyat geri qaytarıla bilməz!</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Ad</dt>
            <dd class="col-sm-10">@Model.Name</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a asp-action="Index" class="btn btn-secondary">Ləğv et</a>
        </form>
    </div>
</div>
