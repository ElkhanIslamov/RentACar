@model RentACar.DataContext.Entities.FooterInfo

@{
    ViewData["Title"] = "Footer Redaktə Et";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Footer Redaktə Et</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>About Text</label>
        <input asp-for="AboutText" class="form-control" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Facebook</label>
        <input asp-for="FacebookUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Twitter</label>
        <input asp-for="TwitterUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Pinterest</label>
        <input asp-for="PinterestUrl" class="form-control" />
    </div>
     <button type="submit" class="btn btn-primary">Yadda Saxla</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Qayıt</a>
</form>
